{
  "name": "@ablanc/translator",
  "version": "4.0.0",
  "description": "Node.js translator using puppeteer to scrape deepl.",
  "main": "lib/index.js",
  "bin": {
    "translator": "./bin/translator"
  },
  "preferGlobal": true,
  "files": [
    "lib/*",
    "bin/*"
  ],
  "scripts": {
    "prepublishOnly": "tsc",
    "test": "echo \"Error: no test specified\"",
    "build": "rimraf lib && tsc",
    "start": "node lib/index.js",
    "dev": "ts-node-dev --respawn src/index.ts"
  },
  "keywords": [
    "deepl",
    "scraper",
    "scraping",
    "translation",
    "translator",
    "typescript",
    "node.js"
  ],
  "author": "Blanc Adrien",
  "license": "ISC",
  "devDependencies": {
    "@types/cli-progress": "^3.4.2",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^13.7.6",
    "@types/puppeteer": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cli-progress": "^3.6.0",
    "commander": "^7.0.0",
    "inquirer": "^7.0.4",
    "puppeteer": "^2.1.1"
  }
}
